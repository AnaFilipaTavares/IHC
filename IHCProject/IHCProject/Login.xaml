<Page x:Class="IHCProject.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IHCProject"
      mc:Ignorable="d"
      Title="Login" >
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="foto.jpg"/>
        </Grid.Background>
        <Label x:Name="label" Content="Escola Secundária XXX" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="label1" Content="Nome de utilizador : " HorizontalAlignment="Left" Margin="30,123,0,0" VerticalAlignment="Top" Width="235" FontSize="20"/>
        <TextBox x:Name="userBox" HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="215" Margin="234,130,0,0"/>
        <Label x:Name="label1_Copy" Content="Password: " HorizontalAlignment="Left" Margin="30,204,0,0" VerticalAlignment="Top" Width="235" FontSize="20"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="215" Margin="234,211,0,0"/>
        <Button x:Name="button" Content="Entrar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="99" Margin="234,290,0,0" Height="38" Background="#FF0072B4" Click="button_Click"/>

    </Grid>
</Page>
