<Window x:Class="IHCProject.ContextoDisciplina.MarcarAvaliacaoPop"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IHCProject.ContextoDisciplina"
      mc:Ignorable="d" 
      
      Title="Marcar Avaliacao"  Height="200
        " Width="500">
    <Grid>
        <Label x:Name="disciplina" Content="Diciplina: " HorizontalAlignment="Left" Margin="88,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="data" Content="Data: " HorizontalAlignment="Left" Margin="88,41,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label" Content="Tipo Avaliação: " HorizontalAlignment="Left" Margin="88,72,0,0" VerticalAlignment="Top"/>

        <Button x:Name="button" Content="Marcar Avaliação" HorizontalAlignment="Left" Margin="214,125,0,0" VerticalAlignment="Top" Width="75" Click="marcar_Click"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Center" Margin="0,74,0,0" VerticalAlignment="Top"  SelectedIndex="0" Width="120">
            <ComboBoxItem x:Name="teste" Content="Teste"/>
            <ComboBoxItem x:Name="apresentacao" Content="Apresentação"/>
            <ComboBoxItem x:Name="tabalho" Content="Trabalhos"/>
        </ComboBox>

    </Grid>

</Window>
