<Page x:Class="IHCProject.MinhasDisciplinas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IHCProject"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="800"
      Title="MinhasDisciplinas">
    <Grid>
        <Menu HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,40,30,30" Width="145" >
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel />
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Header="Perfil" Height="30" FontSize="16" Width="145" HorizontalAlignment="Center" Click="Perfil_Click">
                <MenuItem.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFCC00E0" Offset="0"/>
                        <GradientStop Color="#FFFD7EEC" Offset="1"/>
                        <GradientStop Color="#FF00DCFF"/>
                    </LinearGradientBrush>
                </MenuItem.Background>
            </MenuItem>
            <MenuItem Header="Horário" Height="30" FontSize="16" HorizontalAlignment=
                      "Center" Width="145" Click="horarioClick"/>
            <MenuItem Header="Minhas Disciplinas" Height="30" FontSize="16" HorizontalAlignment="Center" Width="145" Click="disciplinaClick"/>
            <MenuItem Header="Direção de Turma" Height="30" FontSize="16" HorizontalAlignment="Center"  Width="145" Click="DirecaoTurma_Click"/>
            <MenuItem Header="Encerrar Sessão" Height="30" FontSize="16" HorizontalAlignment="Center"  Width="145" Click="Exit_Click"/>
        </Menu>
        <Label x:Name="label" Content="Minhas Disciplinas" HorizontalAlignment="Center" Margin="147,10,0,0" VerticalAlignment="Top" FontSize="20"/>
    
        <ListBox x:Name="listBox" HorizontalAlignment="Center" VerticalAlignment="Center" Height="179" Width="200" Margin="374,52,226,69" BorderBrush="{x:Null}" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
            <ListBoxItem Content="Matematica" Padding="5"/>
            <ListBoxItem Content="Ingles" Padding="5"/>
            <ListBoxItem Content="Matematica" Padding="5"/>
            <ListBoxItem Content="Ingles" Padding="5"/>
            <ListBoxItem Content="Matematica" Padding="5"/>
            <ListBoxItem Content="Ingles" Padding="5"/>


        </ListBox>
        <Button x:Name="aceder" Content="Aceder" Height="22" Width="68" Margin="506,236,226,42" Click="aceder_Click"/>




    </Grid>

</Page>
